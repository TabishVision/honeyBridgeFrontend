{
  "compilerOptions": {
    "target": "es6",
    "resolveJsonModule": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "types": ["@types/node","webpack-env"]
    // "types": ["@types/node", "@types/polkadot__extension-inject", "@types/subwallet__wallet-connect"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
